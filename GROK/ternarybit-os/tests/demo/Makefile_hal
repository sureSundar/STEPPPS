# Makefile for HAL Demo
# US-1.2: Universal Hardware Abstraction
# Epic 1: Calculator + Radio Universal Computer

CC = gcc
CFLAGS = -Wall -Wextra -std=c11 -I../../src -D_POSIX_C_SOURCE=200809L
LDFLAGS =

DEMO = demo_hal
OBJS = demo_hal.o ../../src/hal/tbos_hal.o

all: $(DEMO)

$(DEMO): $(OBJS)
	$(CC) $(OBJS) $(LDFLAGS) -o $(DEMO)

demo_hal.o: demo_hal.c
	$(CC) $(CFLAGS) -c demo_hal.c

../../src/hal/tbos_hal.o: ../../src/hal/tbos_hal.c
	$(CC) $(CFLAGS) -c ../../src/hal/tbos_hal.c -o ../../src/hal/tbos_hal.o

run: $(DEMO)
	./$(DEMO)

clean:
	rm -f $(OBJS) $(DEMO)

.PHONY: all run clean
