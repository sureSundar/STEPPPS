# Makefile for Collective Consciousness Demo
# US-3.2: Collective Consciousness
# Epic 3: Digital Sangha (Internet of Conscious Things)

CC = gcc
CFLAGS = -Wall -Wextra -std=c11 -I../../src -D_POSIX_C_SOURCE=200809L
LDFLAGS = -lrt

DEMO = demo_collective_consciousness
OBJS = demo_collective_consciousness.o ../../src/network/sangha/tbos_sangha.o

all: $(DEMO)

$(DEMO): $(OBJS)
	$(CC) $(OBJS) $(LDFLAGS) -o $(DEMO)

demo_collective_consciousness.o: demo_collective_consciousness.c
	$(CC) $(CFLAGS) -c demo_collective_consciousness.c

../../src/network/sangha/tbos_sangha.o: ../../src/network/sangha/tbos_sangha.c
	$(CC) $(CFLAGS) -c ../../src/network/sangha/tbos_sangha.c -o ../../src/network/sangha/tbos_sangha.o

run: $(DEMO)
	./$(DEMO)

clean:
	rm -f $(OBJS) $(DEMO)

.PHONY: all run clean
