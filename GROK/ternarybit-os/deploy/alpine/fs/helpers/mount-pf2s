#!/bin/sh
# Usage: mount-pf2s <mountpoint> [--backing DIR]
set -eu
MP=${1:-}
shift || true
[ -n "$MP" ] || { echo "usage: mount-pf2s <mountpoint> [--backing DIR]"; exit 1; }
BACKING=/var/lib/pf2s
while [ $# -gt 0 ]; do
  case "$1" in
    --backing) BACKING=$2; shift 2 ;;
    *) break ;;
  esac
done
mkdir -p "$MP" "$BACKING"
exec pf2s_fuse.py --backing "$BACKING" "$MP"
